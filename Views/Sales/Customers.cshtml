@{
    ViewData["Title"] = "Customers";
    Layout = null;
}

<div class="mt-4 container">
    <h2 class="mb-4"><i class="fas fa-user-tag"></i> Customers</h2>
    
    <div class="card">
        <div class="card-header">
            <h5>Customer List</h5>
        </div>
        <div class="card-body">
            <table class="table-bordered table">
                <thead class="thead-dark">
                    <tr>
                        <th>Customer ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Joined Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Customers != null && ViewBag.Customers.Count > 0)
                    {
                        @foreach (var customer in ViewBag.Customers)
                        {
                            <tr>
                                <td>@customer.Id</td>
                                <td>@customer.Name</td>
                                <td>@customer.Email</td>
                                <td>@customer.Phone</td>
                                <td>@customer.JoinedDate</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="5" class="text-center">No customers found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
